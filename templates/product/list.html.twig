{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<h1>Les produits</h1>
	<ul>
		{% for product in products %}
			<li>
				<h2>
					<a href="{{ path('product_item', {'id': product.id}) }}">{{ product.name }}</a>
				</h2>
				<p>{{ product.description }}</p>
				<p>{{ product.price }}
					€</p>
				<p>Catégorie :
					{{ product.category.name }}</p>
				{% if product.discount %}
					<p>En promotion</p>
				{% endif %}
			</li>
		{% endfor %}
	</ul>
{% endblock %}
